---
import arrowIconWhite from "/arrow_white.svg";
import arrowIconGold from "/arrow_gold.svg";
import arrowIconBlack from "/arrow_black.svg";

export interface Props {
	title: string;
	type: "primary" | "secondary" | "fancy";
}

const { title, type } = Astro.props;

let arrowType;
let buttonContent;

switch (type) {
	case "primary":
		arrowType = arrowIconWhite;
		buttonContent = title;
		break;
	case "secondary":
		arrowType = arrowIconGold;
		buttonContent = title;
		break;
	case "fancy":
		arrowType = arrowIconBlack;
		buttonContent = "<>{title}</>";
		break;
	default:
		arrowType = arrowIconWhite;
		break;
}
---

<button id="button" class={type}>
	{
		type == "fancy" ? (
			<>
				<span class="circle" />
				<span class="content">
					<span class="bold">{title.split(" ")[0]} </span>{" "}
					{title.split(" ").slice(1).join(" ")}
				</span>
			</>
		) : (
			buttonContent
		)
	}
	<img src={arrowType} />
</button>

<style>
	.primary {
		border: none;
		border-radius: 10000px;
		background-color: #0f0f0f;
		color: #fff;
		font-size: 20px;
		padding: 16px 32px;
		transition: background-color 250ms ease, box-shadow 250ms ease;
	}

	.primary:hover {
		cursor: pointer;
		background-color: #232323;
		box-shadow: 0px 5px 5px 2px rgba(15, 15, 15, 0.1);
	}

	img {
		margin-left: 16px;
		height: 14px;
	}

	.secondary {
		border: 2px solid #0f0f0f;
		border-radius: 2px;
		background-color: transparent;
		color: #0f0f0f;
		font-size: 20px;
		padding: 16px 32px;
		transition: box-shadow 250ms ease;
	}

	.secondary:hover {
		cursor: pointer;
		border-color: #232323;
		box-shadow: 0px 5px 5px 2px rgba(15, 15, 15, 0.1);
	}

	.fancy {
		border: none;
		background-color: transparent;
		font-size: 20px;
		padding: 16px 32px;
		position: relative;
		text-align: left;
		font-weight: 100;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.bold {
		font-weight: 700;
	}

	.circle {
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		z-index: -1;
		width: 64px;
		aspect-ratio: 1/1;
		border-radius: 50%;
		background-color: #d6a152;
		transition: box-shadow 250ms ease;
	}

	.fancy:hover {
		cursor: pointer;
	}

	.fancy:hover .circle {
		box-shadow: 0px 5px 5px 2px rgba(15, 15, 15, 0.1);
	}
</style>

