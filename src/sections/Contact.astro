---
import Button from "../components/Button.astro";
---

<section>
	<div>
		<h1>Kontakt</h1>
		<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Tenetur quo</p>
		<form>
			<input type="text" placeholder="Imię i nazwisko" />
			<input type="text" placeholder="Adres email" />
			<input type="text" placeholder="Temat" />
			<textarea cols="30" rows="10" placeholder="Wiadomość"></textarea>
			<Button title="Wyślij wiadomość" type="primary" />
		</form>
	</div>

	<div class="image"></div>
</section>

<style>
	section {
		margin-top: 5rem;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
	}

	p {
		color: var(--sub-text);
		font-size: 1.25rem;
		line-height: 2;
		letter-spacing: 0.5px;
	}

	h1 {
		font-family: "Oxygen", sans-serif;
		font-size: 4rem;
		margin-top: 0;
	}

	.image {
		width: 100%;
		height: 100%;
		background-color: #232323;
	}

	form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	textarea {
		resize: vertical;
	}

	input,
	textarea {
		padding: 1rem;
		font-size: 1.25rem;
		color: #7a7a7a;
		border: 2px solid #0f0f0f;
		border-radius: 2px;
	}
</style>
